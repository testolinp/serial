<section class="home slide">
  <div class="home__content">
    <h3 class="home__content__title is-mobile">{{t "home.title"}}</h3>
    <h3 class="home__content__title is-desktop">{{t "home.titleDesktop"}}</h3>
    <p class="home__content__description is-mobile">{{t "home.description"}}</p>
    <p class="home__content__description is-desktop">{{t "home.descriptionDesktop"}}</p>
  </div>
</section>

<section class="work slide">
  <div class="work__content">
    <h3 class="work__content__title is-mobile">{{t "work.title"}}</h3>
    <h3 class="work__content__title is-desktop">{{t "work.titleDesktop"}}</h3>
    <p class="work__content__description">{{t "work.description"}}</p>
  </div>
</section>

<section class="services slide">
  <div class="services__content">
    <div class="services__content__mobile">
      <h3 class="services__content__title">{{t "services.title"}}</h3>
      <p class="services__content__description">{{t "services.description"}}</p>
      <p class="services__content__description">{{t "services.description1"}}</p>
    </div>
    <div class="services__content__desktop">
      <h3 class="services__content__title">{{t "services.titleDesktop"}}</h3>
      <p class="services__content__description">{{t "services.descriptionDesktop"}}</p>
    </div>
  </div>
</section>

<section class="contact slide">
  <div class="contact__content">
    <div class="contact__content__wrapper">
      <h3 class="contact__content__title is-mobile">{{t "contact.title"}}</h3>
      <h3 class="contact__content__title is-desktop">{{t "contact.titleDesktop"}}</h3>
      <h3 class="contact__content__title">{{t "contact.title1"}}</h3>
    </div>
    <p class="contact__description is-mobile">{{t "contact.description"}}</p>
    <p class="contact__description is-desktop">{{t "contact.descriptionDesktop"}}</p>
  </div>
</section>

<div class="dots">
  <ul class="dots__list">
    <li class="dots__list__item dots__list__item--active"><a href="#" {{action 'goToSlide' 0}}></a></li>
    <li class="dots__list__item"><a href="#" {{action 'goToSlide' 1}}></a></li>
    <li class="dots__list__item"><a href="#" {{action 'goToSlide' 2}}></a></li>
    <li class="dots__list__item"><a href="#" {{action 'goToSlide' 3}}></a></li>
  </ul>
</div>
